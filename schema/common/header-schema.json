{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "description": "Header of a message",
  "required": ["messageId", "schemaVersion"],
  "properties": {
    "messageId": {
      "type": "string",
      "description": "Unique ID of a message. Generated by a sender"
    },
    "schemaVersion": {
      "type": "string",
      "description": "Version of message schema"
    },
    "timestamp": {
      "type": "string",
      "description": "Timestamp of sending the message"
    }
  }
}